<h2>Filtrer les sorties</h2>
{{ form_start(form) }}
<div class="d-flex col-12 justify-content-around">
    <div class="col-5">
        <div>
            {{  form_label(form.campus) }}
            {{ form_widget(form.campus) }}
        </div>
        <div>
            {{ form_label(form.searchBar) }}
            {{ form_widget(form.searchBar) }}
        </div>
        <div class="d-flex justify-content-around align-content-center align-items-center ">
            <p>Entre</p>
            {{ form_widget(form.minDate) }}
            <p>et</p>
            {{ form_widget(form.maxDate) }}
        </div>
        <div class="d-flex justify-content-around align-content-center align-items-center ">
            {{ form_errors(form.minDate) }}
            {{ form_errors(form.maxDate) }}
        </div>
    </div>
    <div class="col-3 d-flex flex-column m-auto">
        <div>
        {{ form_widget(form.isOrganizer) }}
        {{ form_label(form.isOrganizer) }}
        </div>

{#        TODO :: lier les deux boutons (isRegistred/isNotRegistred) pour qu'un seul choix soit possible#}
        <div>
        {{ form_widget(form.isRegistred) }}
        {{ form_label(form.isRegistred) }}
        </div>
        <div>
        {{ form_widget(form.isNotRegistred) }}
        {{ form_label(form.isNotRegistred) }}
        </div>
        <div>
        {{ form_widget(form.isPassed) }}
        {{ form_label(form.isPassed) }}
        </div>
    </div>
    <button type="submit" class="btn btn-primary my-auto col-2">Rechercher</button>
</div>
{{ form_end(form) }}
